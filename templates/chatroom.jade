doctype html
html(lang="en")
	head
		title!= title
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		script(src="static/js/socket.io.js" type="text/javascript")
		script(src="static/js/jquery-2.1.1.min.js" type="text/javascript")
		link(rel="stylesheet" href="static/css/bootstrap.min.css")		
		link(rel="stylesheet" href="static/css/bootstrap-theme.min.css")		
		script(src="static/js/bootstrap.min.js" type="text/javascript")
		script(type="text/javascript").
			var username = '!{username}'
		script(src="static/js/socket-listener.js" type="text/javascript")
		link(rel="stylesheet" href="static/css/chat.css")
	body
		div(class="container center-block bg-primary")
			form(class="form-wrap" role="form" action="/signout" method="get")
				button(type="submit" class="btn btn-danger") Sign out
			h5 Instant Chat (Nothing will be saved after closing the chat session.)
			
			div(id="board")
			
			div(id="chatMsg")
				input(id="chatMsgTextInput" class="form-control" type="text" value="" placeholder="Type message..." autofocus)
				h6(id="notify")